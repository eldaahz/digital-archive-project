1.) -- Inheritance Hiearchy -- 
                 AbstractArtItem (ABC)
                /        |        |        \
               /         |        |         \
        Painting     Sculpture   DigitalArt   Photograph

2 & 3.) --  Abstract Base Classes & Polymorphism --
from abc import ABC, abstractmethod

# Abstract Base Class
class ArtItem(ABC):
    """Abstract base class for all artworks."""
    
    def __init__(self, title, artist, year):
        self.title = title
        self.artist = artist
        self.year = year

    @abstractmethod
    def display_info(self):
        """Return information about the artwork."""
        pass

# Derived Classes
class Painting(ArtItem):
    def __init__(self, title, artist, year, h, w):
        super().__init__(title, artist, year)
        self.h, self.w = h, w

    def display_info(self):
        return f"[Painting] {self.title} by {self.artist} ({self.year}) — {self.h}x{self.w} cm"

class Sculpture(ArtItem):
    def __init__(self, title, artist, year, h, w, d, material):
        super().__init__(title, artist, year)
        self.h, self.w, self.d, self.material = h, w, d, material

    def display_info(self):
        return f"[Sculpture] {self.title} by {self.artist} ({self.year}) — {self.h}x{self.w}x{self.d} cm, Material: {self.material}"

class DigitalArt(ArtItem):
    def __init__(self, title, artist, year, res):
        super().__init__(title, artist, year)
        self.res = res

    def display_info(self):
        return f"[Digital Art] {self.title} by {self.artist} ({self.year}) — {self.res}"

class Photograph(ArtItem):
    def __init__(self, title, artist, year, h, w, color):
        super().__init__(title, artist, year)
        self.h, self.w, self.color = h, w, color

    def display_info(self):
        return f"[Photo] {self.title} by {self.artist} ({self.year}) — {self.h}x{self.w} cm, {self.color}"

# Polymorphism 
if __name__ == "__main__":
    artworks = [
        Painting("Starry Night", "Van Gogh", 1889, 73, 92),
        Sculpture("David", "Michelangelo", 1504, 517, 199, 120, "marble"),
        DigitalArt("Fractal Dreams", "Ava Cole", 2020, "4K"),
        Photograph("Moon Landing", "NASA", 1969, 30, 40, "black & white")
    ]

    print("=== Displaying All Artworks ===")
    for art in artworks:  # Polymorphic call
        print(art.display_info())


4.) -- Composition w/ Demonstration -- 
from abc import ABC, abstractmethod

# Abstract Base Class
class ArtItem(ABC):
    def __init__(self, title, artist, year):
        self.title = title
        self.artist = artist
        self.year = year

    @abstractmethod
    def display_info(self):
        pass

# Derived Classes
class Painting(ArtItem):
    def __init__(self, title, artist, year, h, w):
        super().__init__(title, artist, year)
        self.h, self.w = h, w

    def display_info(self):
        return f"[Painting] {self.title} by {self.artist} ({self.year}) — {self.h}x{self.w} cm"

class Sculpture(ArtItem):
    def __init__(self, title, artist, year, h, w, d, material):
        super().__init__(title, artist, year)
        self.h, self.w, self.d, self.material = h, w, d, material

    def display_info(self):
        return f"[Sculpture] {self.title} by {self.artist} ({self.year}) — {self.h}x{self.w}x{self.d} cm, Material: {self.material}"

# Composition Example
class ArtworkCollection:
    """A simple collection containing ArtItem objects."""
    def __init__(self, name):
        self.name = name
        self.artworks = []

    def add_artwork(self, art: ArtItem):
        self.artworks.append(art)

    def display_all(self):
        return [art.display_info() for art in self.artworks]

# Demo
if __name__ == "__main__":
    collection = ArtworkCollection("Masterpieces")
    collection.add_artwork(Painting("Starry Night", "Van Gogh", 1889, 73, 92))
    collection.add_artwork(Sculpture("David", "Michelangelo", 1504, 517, 199, 120, "marble"))

    for info in collection.display_all():  
        print(info)
